<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_counter_layout"
    style="@style/Counter_player"
    >

    <LinearLayout
        android:id="@+id/player1_Layout_GC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/PlayerHeight_GC"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/PlayerNameHeight_GC"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/player1_name_GC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/PlayerScore_width"

                />


            <TextView
                android:id="@+id/player1_service_GC"
                android:layout_width="0dp"
                android:layout_weight="@integer/SetService_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Service"
                android:background="@drawable/service_ball"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/ScoreHeight_GC"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/player1_score_GC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/PlayerScore_width"

            />
            <TextView
                android:id="@+id/player1_set_GC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/SetService_width"

                />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/undo_GC"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/UnDoHeight_GC"
        android:gravity="center"
        android:text= "Undo"
        />

    <LinearLayout
        android:id="@+id/player2_Layout_GC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/PlayerHeight_GC"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/PlayerNameHeight_GC"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/player2_name_GC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/PlayerScore_width"

                />

            <TextView
                android:id="@+id/player2_service_GC"
                android:layout_width="0dp"
                android:layout_weight="@integer/SetService_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/service_ball"
                android:text="service"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/ScoreHeight_GC"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/player2_score_GC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/PlayerScore_width"

                />


            <TextView
                android:id="@+id/player2_set_GC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/SetService_width"

                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>