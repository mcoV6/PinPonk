<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_counter_layout"
    style="@style/Counter_player"
    >

    <LinearLayout
        android:id="@+id/player1_Layout_GC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/PlayerHeight_GC"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/PlayerNameHeight_GC"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/player1_name_GC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/Player_width"
                style="@style/Player_name_GC"

                />

            <LinearLayout
                android:id="@+id/player1_service_GC"
                android:layout_width="0dp"
                android:layout_weight="@integer/Service_width"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Service"
                style="@style/Service_text"
                />

                <TextView
                    android:layout_width="@dimen/service_ball_dim"
                    android:layout_height="@dimen/service_ball_dim"
                    android:layout_gravity="center"
                    android:background="@drawable/service_ball"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/ScoreHeight_GC"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Points:"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/Points_GC"
                />

        <TextView
            android:id="@+id/player1_score_GC"
            android:layout_width="0dp"
            android:layout_weight="@integer/PlayerScore_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            style="@style/Player_score_GC"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/SetService_width"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Set"
                android:gravity="center"
                style="@style/Set_GC"
                />
            <TextView
                android:id="@+id/player1_set_GC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/Player_set_GC"
                />

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/undo_GC"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/UnDoHeight_GC"
        android:gravity="center"
        android:text= "Undo"
        style="@style/UnDo_GC"
        android:background="@color/colorUndo"
        />

    <LinearLayout
        android:id="@+id/player2_Layout_GC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/PlayerHeight_GC"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/PlayerNameHeight_GC"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/player2_name_GC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/Player_width"
                style="@style/Player_name_GC"

                />

            <LinearLayout
                android:id="@+id/player2_service_GC"
                android:layout_width="0dp"
                android:layout_weight="@integer/Service_width"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Service"
                    style="@style/Service_text"
                    />

                <TextView
                    android:layout_width="@dimen/service_ball_dim"
                    android:layout_height="@dimen/service_ball_dim"
                    android:layout_gravity="center"
                    android:background="@drawable/service_ball"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/ScoreHeight_GC"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Points:"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/Points_GC"
                />

            <TextView
                android:id="@+id/player2_score_GC"
                android:layout_width="0dp"
                android:layout_weight="@integer/PlayerScore_width"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/Player_score_GC"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/SetService_width"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Set"
                    android:gravity="center"
                    style="@style/Set_GC"
                    />
                <TextView
                    android:id="@+id/player2_set_GC"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    style="@style/Player_set_GC"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>